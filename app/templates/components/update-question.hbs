{{#if updateQuestionForm}}
<h4>Edit {{question.author}}'s question</h4>
<div>
  <form>
    <div class="form-group">
      <label for="content">Content</label>
      {{textarea value=content id="content" placeholder=question.content}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes" placeholder=question.notes}}
    </div>
    <button class="btn btn-info"{{action 'update' question}}>Update</button>
  </form>
</div>
{{else}}
  <button id="update-question-button" class="btn btn-info" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
