<br>
<div class="well">
  <h2>{{question.content}}</h2>
   <h4>asked by-{{question.author}}</h4>
  <h4>{{question.notes}}</h4>
   {{update-question question=question update="update"}}
   <br>
   <button class="btn btn-danger" {{action 'delete' question}}>Delete</button>
</div>

<div class="row">
  <div class="col-md-9">
    <h2> view answers </h2>
    <ul>
      {{#each question.answers as |answer|}}
      {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
      {{/each}}
    </ul>
  </div>
</div>
